<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph.xml"
        app:startDestination="@id/articlesListingFragment">

    <fragment
            android:id="@+id/articlesListingFragment"
            android:name="com.example.criticalnewsfeedapp.ui.articlelisting.ArticlesListingFragment"
            android:label="fragment_articles_listing"
            tools:layout="@layout/fragment_articles_listing" >
        <action
                android:id="@+id/action_articlesListingFragment_to_articleFragment"
                app:destination="@id/articleFragment" />
    </fragment>
    <fragment
            android:id="@+id/articleFragment"
            android:name="com.example.criticalnewsfeedapp.ui.article.ArticleFragment"
            android:label="fragment_article"
            tools:layout="@layout/fragment_article" />
</navigation>